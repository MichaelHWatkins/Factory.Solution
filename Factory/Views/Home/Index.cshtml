@using Factory.Models;
@model List<Factory.Models.Machine>;
  
<h1>Welcome to the Factory!</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineID })</li>
}

<p>@Html.ActionLink("See all Machines", "Index", "Machines")</p> 
<p>@Html.ActionLink("See all Engineers", "Index", "Engineers")</p>